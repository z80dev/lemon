{
  "name": "lemon-browser-node",
  "version": "0.1.0",
  "private": true,
  "description": "Browser node for Lemon (managed Chrome profile via CDP + Playwright)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "lemon-browser-node": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts src/local-driver.ts --format esm --clean",
    "dev": "tsup src/cli.ts src/index.ts src/local-driver.ts --format esm --watch",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "playwright-core": "1.58.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.0",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.56.1",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
